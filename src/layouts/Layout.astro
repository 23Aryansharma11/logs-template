---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { userData } from "../site-config";

const title = userData.meta.title || "Logs";
const description = userData.meta.description || "Tracking my coding journey";
---

<!doctype html>
<html lang="en" class="">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>{title}</title>
        <meta name="generator" content={Astro.generator} />
        <link rel="icon" href="/favicon.svg" />
        <!-- <link rel="stylesheet" href="/styles/global.css" /> -->
    </head>

    <body
        class="w-full min-h-screen flex flex-col justify-between items-center bg-white dark:bg-black"
    >
        <Navbar />
        <main class="container mx-auto">
            <slot />
        </main>
        <Footer />
    </body>
</html>
